<div class="panel panel-default">
  <div class="panel-body text-center">
    <div class="alert {{if paymentStatus (if paymentSuccess 'alert-success' 'alert-warning') 'alert-info'}}" role="alert">
      {{#if paymentStatus}}
        {{#if paymentSuccess}}
          Spende erhalten. Vielen Dank!
        {{else}}
          Spende leider nicht erhalten. Bitte probiere es erneut!
        {{/if}}
      {{else}}
        Überprüfe Spende...
      {{/if}}
    </div>
    <button {{action 'clickOkay'}} class='btn btn-lg btn-primary' disabled={{unless paymentStatus true}}>
      OK
    </button>
  </div>
</div>
